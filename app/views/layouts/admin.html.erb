<!DOCTYPE html>
<html>
	<head>
	  <title>CMS Admin | <%= @page_title || 'Admin Area' %></title>
	  <%= stylesheet_link_tag :all %>
	  <%= stylesheet_link_tag 'blueprint/screen.css' %>
	  <%= stylesheet_link_tag 'override.css' %>
	  <%= javascript_include_tag :defaults %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tag %>
	</head>
	
	<body>
		
		<div id="header">
				<%= image_tag 'rails.png' %><h1>CMS Admin</h1>
		</div>
		
		<div class="container">
			
			
			<div id="main">
				<% if !flash[:notice].blank?  %>
					<div class="notice">
						<%= flash[:notice] %>
					</div>
				<% end %>
				
				<div id="content">
					<%= yield %>
				</div>		
			</div>
			
			<div id="footer">
				<p id="copyright">&copy; Philllip's Cool Junk</p>
			</div>
		
		
		</div>
	</body>
	
	
	
</html>